{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@pro/*": ["pro/*"],
      "@shared/*": ["shared/*"],
      "@providers/*": ["providers/*"],
      "@commands/*": ["commands/*"],
      "@chat/*": ["chat/*"],
      "@utils/*": ["utils/*"],
      "@views/*": ["views/*"]
    }
  },
  "exclude": ["node_modules", ".vscode-test", "webview-ui", "test"]
}




