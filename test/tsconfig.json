{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "../out/test",
    "lib": ["ES2020"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "baseUrl": "../src",
    "paths": {
      "@core/*": ["core/*"],
      "@pro/*": ["pro/*"],
      "@shared/*": ["shared/*"],
      "@providers/*": ["providers/*"],
      "@commands/*": ["commands/*"],
      "@chat/*": ["chat/*"],
      "@utils/*": ["utils/*"],
      "@views/*": ["views/*"]
    },
    "types": ["node", "mocha"]
  },
  "include": [
    "./integration/**/*.ts",
    "./unit/**/*.ts"
  ],
  "exclude": ["../node_modules"]
}

