{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "@shared/*": [
        "shared/*"
      ],
      "@core/*": [
        "core/*"
      ],
      "@pro/*": [
        "pro/*"
      ],
      "@linear/*": [
        "linear/*"
      ],
      "@jira/*": [
        "jira/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "../src/types/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}