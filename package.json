{
  "name": "cursor-monorepo-tools",
  "displayName": "Linear Buddy - Monorepo Tools",
  "description": "AI-powered Linear integration with workflow automation for monorepo PRs and standups",
  "version": "0.1.0",
  "publisher": "personal",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Chat"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "monorepoTools.generatePRSummary",
        "title": "Linear Buddy: Generate PR Summary"
      },
      {
        "command": "monorepoTools.generateStandup",
        "title": "Linear Buddy: Generate Standup Update"
      },
      {
        "command": "monorepoTools.openStandupBuilder",
        "title": "Linear Buddy: Open Standup Builder",
        "icon": "$(notebook)",
        "category": "Linear Buddy"
      },
      {
        "command": "monorepoTools.refreshTickets",
        "title": "Linear Buddy: Refresh Tickets",
        "icon": "$(refresh)"
      },
      {
        "command": "monorepoTools.openTicket",
        "title": "Linear Buddy: Open Ticket"
      },
      {
        "command": "monorepoTools.startWork",
        "title": "Linear Buddy: Start Work on Ticket",
        "icon": "$(play)"
      },
      {
        "command": "monorepoTools.completeTicket",
        "title": "Linear Buddy: Complete Ticket",
        "icon": "$(check)"
      },
      {
        "command": "monorepoTools.configureLinearToken",
        "title": "Linear Buddy: Update Linear API Key"
      },
      {
        "command": "monorepoTools.startBranch",
        "title": "Linear Buddy: Start Branch for Ticket",
        "icon": "$(git-branch)"
      },
      {
        "command": "monorepoTools.openPR",
        "title": "Linear Buddy: Open Pull Request",
        "icon": "$(git-pull-request)"
      },
      {
        "command": "monorepoTools.changeTicketStatus",
        "title": "Linear Buddy: Change Ticket Status",
        "icon": "$(edit)"
      },
      {
        "command": "monorepoTools.convertTodoToTicket",
        "title": "Linear Buddy: Convert TODO to Ticket",
        "icon": "$(add)",
        "category": "Linear Buddy"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "linear-buddy",
          "title": "Linear Buddy",
          "icon": "$(checklist)"
        }
      ]
    },
    "views": {
      "linear-buddy": [
        {
          "id": "linearTickets",
          "name": "My Tickets"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "monorepoTools.convertTodoToTicket",
          "when": "editorTextFocus && editorHasSelection || editorTextFocus",
          "group": "linear@1"
        }
      ],
      "view/title": [
        {
          "command": "monorepoTools.refreshTickets",
          "when": "view == linearTickets",
          "group": "navigation"
        },
        {
          "command": "monorepoTools.openStandupBuilder",
          "when": "view == linearTickets",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "monorepoTools.startBranch",
          "when": "view == linearTickets && viewItem == linearTicket:unstarted",
          "group": "inline@1"
        },
        {
          "command": "monorepoTools.openPR",
          "when": "view == linearTickets && viewItem =~ /linearTicket.*:withPR/",
          "group": "inline@1"
        },
        {
          "command": "monorepoTools.changeTicketStatus",
          "when": "view == linearTickets && viewItem =~ /linearTicket.*/",
          "group": "status@1"
        },
        {
          "command": "monorepoTools.startWork",
          "when": "view == linearTickets && viewItem == linearTicket",
          "group": "inline@2"
        },
        {
          "command": "monorepoTools.completeTicket",
          "when": "view == linearTickets && viewItem == linearTicket",
          "group": "inline@3"
        }
      ]
    },
    "chatParticipants": [
      {
        "id": "linear-buddy",
        "name": "linear",
        "description": "AI assistant for Linear workflow, PRs, and standups",
        "isSticky": true,
        "commands": [
          {
            "name": "tickets",
            "description": "Show your Linear tickets"
          },
          {
            "name": "standup",
            "description": "Generate standup update"
          },
          {
            "name": "pr",
            "description": "Generate PR summary"
          },
          {
            "name": "status",
            "description": "Update ticket status"
          }
        ]
      }
    ],
    "configuration": {
      "title": "Monorepo Tools",
      "properties": {
        "monorepoTools.baseBranch": {
          "type": "string",
          "default": "main",
          "description": "Default base branch for comparing changes (with fallback to 'master')"
        },
        "monorepoTools.maxPackageScope": {
          "type": "number",
          "default": 2,
          "description": "Maximum number of packages that should be modified in a single PR"
        },
        "monorepoTools.packagesPaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "packages/",
            "apps/"
          ],
          "description": "Array of directory paths to scan for package changes (e.g., ['packages/', 'apps/', 'domains/'])"
        },
        "monorepoTools.prTemplatePath": {
          "type": "string",
          "default": ".github/pull_request_template.md",
          "description": "Path to the PR template file in the workspace"
        },
        "monorepoTools.standupTimeWindow": {
          "type": "string",
          "default": "24 hours ago",
          "description": "Time window for standup commits (e.g., '24 hours ago', '2 days ago')"
        },
        "monorepoTools.enableAISummarization": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered summarization for PR summaries and standups (requires Cursor/Copilot)"
        },
        "monorepoTools.aiModel": {
          "type": "string",
          "enum": [
            "gpt-4o",
            "gpt-4.1",
            "gpt-4-turbo",
            "gpt-4",
            "gpt-4o-mini",
            "gpt-3.5-turbo",
            "gemini-2.0-flash"
          ],
          "default": "gpt-4o",
          "description": "AI model to use for summarization (verified working Copilot models)"
        },
        "monorepoTools.writingTone": {
          "type": "string",
          "enum": [
            "casual",
            "professional",
            "technical",
            "concise"
          ],
          "default": "professional",
          "description": "Writing tone for AI-generated summaries"
        },
        "monorepoTools.firstTimeSetupComplete": {
          "type": "boolean",
          "default": false,
          "description": "Whether first-time setup has been completed"
        },
        "monorepoTools.linearApiToken": {
          "type": "string",
          "default": "",
          "description": "Linear API token for fetching tickets (get from linear.app/settings/api)"
        },
        "monorepoTools.linearTeamId": {
          "type": "string",
          "default": "",
          "description": "Linear team ID to filter tickets (optional)"
        },
        "monorepoTools.linearDefaultTeamId": {
          "type": "string",
          "default": "",
          "description": "Default Linear team ID for creating tickets (saved from TODO converter)"
        },
        "monorepoTools.autoRefreshInterval": {
          "type": "number",
          "default": 5,
          "description": "Auto-refresh interval for Linear tickets in minutes (0 to disable)"
        },
        "monorepoTools.branchNamingConvention": {
          "type": "string",
          "enum": [
            "conventional",
            "simple",
            "custom"
          ],
          "default": "conventional",
          "description": "Branch naming convention: conventional (feat/fix/etc), simple (identifier-only), or custom"
        },
        "monorepoTools.customBranchTemplate": {
          "type": "string",
          "default": "{type}/{identifier}-{slug}",
          "description": "Custom branch template. Available placeholders: {type}, {identifier}, {slug}, {username}"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run compile:webview",
    "compile": "tsc -p ./",
    "compile:webview": "node webview-ui/build.js",
    "watch": "tsc -watch -p ./",
    "watch:webview": "node webview-ui/build.js --watch",
    "pretest": "npm run compile",
    "package": "vsce package --allow-missing-repository"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.19.11",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "simple-git": "^3.21.0"
  }
}
